issn = {13648152},
journal = {Environmental Modelling and Software},
keywords = {Hydrological model,Message passing,Parallelization,SWAT},
pages = {124--132},
publisher = {Elsevier Ltd},
title = {{Parallelization of a hydrological model using the message passing interface}},
url = {http://dx.doi.org/10.1016/j.envsoft.2013.02.002},
volume = {43},
