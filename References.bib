issn = {0022-1694},
journal = {Journal of Hydrology},
month = {feb},
pages = {93--105},
publisher = {Elsevier},
title = {{Numerical modelling of stable isotope (2H and 18O) transport in a hydro-geothermal system: Model development and implementation to the Guide Basin, China}},
