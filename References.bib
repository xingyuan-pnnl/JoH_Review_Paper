pages = {1--20},
title = {{Using Deep Learning to Fill Spatio-Temporal Data Gaps in Hydrological Monitoring Networks}},
url = {https://www.hydrol-earth-syst-sci-discuss.net/hess-2019-196/},
year = {2019}
}
