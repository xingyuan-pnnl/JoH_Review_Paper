pages = {1458--1470},
pmid = {23135737},
title = {{A statistical method for estimating wood thermal diffusivity and probe geometry using in situ heat response curves from sap flow measurements}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/23135737 https://academic.oup.com/treephys/article-lookup/doi/10.1093/treephys/tps100},
volume = {32},
