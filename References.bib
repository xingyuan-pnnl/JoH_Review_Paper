doi = {10.1002/jgrg.20090},
file = {:Users/leer384/Library/Application Support/Mendeley Desktop/Downloaded/Duncan, Groffman, Band - Unknown - Towards closing the watershed nitrogen budget Spatial and temporal scaling of denitrification.pdf:pdf},
journal = {J. Geophys. Res. Biogeosci},
pages = {1105--1119},
title = {{Towards closing the watershed nitrogen budget: Spatial and temporal scaling of denitrification}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1002/jgrg.20090},
volume = {118},
