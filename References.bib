title = {{High resolution monitoring above and below the groundwater table uncovers small-scale hydrochemical gradients}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/29131645 http://pubs.acs.org/doi/10.1021/acs.est.7b03087},
