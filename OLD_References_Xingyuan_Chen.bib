author = {Clark, Martyn P and Slater, Andrew G and Rupp, David E and Woods, Ross A and Vrugt, Jasper A and Gupta, Hoshin V and Wagener, Thorsten and Hay, Lauren E and Clark, M P and Slater, A G and Rupp, D E and Woods, R A and Vrugt, J A and Gupta, H V and Wagener, T and Hay, L E},
