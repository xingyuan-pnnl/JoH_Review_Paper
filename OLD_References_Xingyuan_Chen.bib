month = {jan},
number = {1},
pages = {25},
publisher = {Multidisciplinary Digital Publishing Institute},
title = {{Hot Spots and Persistence of Nitrate in Aquifers Across Scales}},
url = {http://www.mdpi.com/1099-4300/18/1/25},
volume = {18},
year = {2016}
}
@article{Clark2008,
